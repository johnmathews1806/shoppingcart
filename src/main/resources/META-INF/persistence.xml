<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="shoppingcart" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/DefaultDS</jta-data-source>
		<mapping-file>orm.xml</mapping-file>
		<jar-file>shoppingcart-1.0-SNAPSHOT.war</jar-file>		
		<class>com.jm.shoppingcart.entities.User</class>
		<class>com.jm.shoppingcart.entities.Product</class>
		<class>com.jm.shoppingcart.entities.Order</class>
		<class>com.jm.shoppingcart.entities.OrderDetail</class>
		<class>com.jm.shoppingcart.entities.ContactDetail</class>
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
		<properties>
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.connection.username" value="john" />
			<property name="hibernate.connection.password" value="JMaug2017" />
			<property name="hibernate.connection.url" value="jdbc:oracle:thin:@localhost:1521:XE" />			
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
		</properties>
	</persistence-unit>
</persistence>